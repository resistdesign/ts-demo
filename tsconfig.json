{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "umd",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "dist"
  ]
}
